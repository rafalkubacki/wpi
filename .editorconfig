# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

[*.{php,html,twig}]
indent_size = 4

[docker-compose.yml]
indent_size = 4

[COMMIT_EDITMSG]
indent_size = 4
max_line_length = 80
